<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h1>Signup on Wanderlust</h1>
  </div>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST">
      <div>
        <label for="username " class="form-label">Username</label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div>
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          required
        />
      </div>

      <div>
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-success mt-3" btn-primary>SignUp</button>
    </form>
  </div>
</div>
